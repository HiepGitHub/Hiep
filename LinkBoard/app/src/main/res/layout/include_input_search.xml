<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edtInputSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/hint_search_trend"
        android:imeOptions="actionSearch"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tvResultInPut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="@color/text_search_autocomplete_color"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnActionMailAlert"
                style="@style/btn_action_search_result"
                android:background="@drawable/icon_email_alert" />

            <ImageView
                android:id="@+id/btnActionSave"
                style="@style/btn_action_search_result"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/icon_save" />

            <ImageView
                android:id="@+id/btnActionShare"
                style="@style/btn_action_search_result"
                android:background="@drawable/icon_share" />
        </LinearLayout>

        <!--  <ImageView
              android:id="@+id/btnActionMailAlert"
              style="@style/btn_action_search_result"
              android:layout_marginRight="30dp"
              android:background="@drawable/icon_email_alert" />

          <ImageView
              android:id="@+id/btnActionSave"
              style="@style/btn_action_search_result"
              android:layout_marginRight="30dp"
              android:background="@drawable/icon_save" />

          <ImageView
              android:id="@+id/btnActionShare"
              style="@style/btn_action_search_result"
              android:layout_marginRight="50dp"
              android:background="@drawable/icon_share" />-->

        <ImageView
            android:id="@+id/btnMore"
            style="@style/btn_action_search_result"
            android:layout_marginRight="10dp"

            android:background="@drawable/icon_more" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tabWeb"
            style="@style/btn_tab_type_search"
            android:text="WEB" />

        <Button
            android:id="@+id/tabSocial"
            style="@style/btn_tab_type_search"
            android:text="Social" />

    </LinearLayout>
</LinearLayout>